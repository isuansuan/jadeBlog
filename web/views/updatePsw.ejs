<% include header.ejs %>
<% include sidebar.ejs %>

<% if(error){%>
    <div style="text-align: center;font-size:40px;color:red;"><strong><%= error %></strong></div>
<%}else{ %>
    <div style="align-content: center;float: left;">
    <form class="form text-center text-primary" action="#" onsubmit="return false;">
        <div class="form-group" style="margin-top:20px;">
            <input type="text" id="idMyEmail" hidden="hidden" value="<%= email%>">
            <input type="text" id="idMyToken" hidden="hidden" value="<%= token%>">
            <label for="idNewPsw" class="pull-left" style="margin-right:20px;">新 密 码</label>
            <input type="password" id="idNewPsw" class="col-md-8" style="float: right">
            <p class="help-block">&nbsp;</p>
        </div>
        <div class="form-group" style="margin-top:20px;">
            <label for="idNewPswAgain" class="pull-left">确认新密码</label>
            <input type="password" id="idNewPswAgain" class="col-md-8" style="float: right;">
        </div>
        <p class="help-block">&nbsp;</p>
        <div class="form-group" style="float: right">
            <button type="button" class="btn btn-default " id="idBtnUpdatePsw">确认</button>
        </div>
    </form>
    </div>
<%}%>

<% include footer.ejs %>

<script type="text/javascript">
    require(["/js/main.js"], function () {
        require(['/js/app/updatePassword.js']);
    });
</script>