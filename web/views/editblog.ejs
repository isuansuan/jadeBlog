<% include header.ejs %>
<!--https://github.com/summernote/summernote-->

<div class="col-md-7" style="float: left;">
    <form role="form" onsubmit="return false;">
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon">文章类型</span>
                <select class="form-control" style="width:400px;" data-size="5" data-style="btn-success" id="idArticleTypes">
                    <% for(var i = 0, len = sidebar.length;i < len;i++){  if(sidebar[i].en == "News"){continue;}%>
                    <option><%= sidebar[i].ch %></option>
                    <% } %>
                </select>
            </div>
            <div class="pull-right">
                <button type="submit" class="btn btn-success btn-small" id="idBtnAddArticleType">添加新的文章类型</button>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon">文章名称</span>
                <input type="text" class="form-control col-lg-10" style="width:400px;" id="idArticleName"
                       placeholder="请输入名称">
            </div>

        </div>
        <div class="form-group">
            <textarea class="summernote"></textarea>
        </div>

        <div class="form-group" style="float:right;margin-top: 5px;">
            <button type="submit" class="btn btn-info btn-small" id="idLockEdit">锁定</button>
            <button type="submit" class="btn btn-warning btn-small" id="idRetEdit">重置</button>
            <button type="submit" class="btn btn-primary btn-small" id="idArticleCommit">提交</button>
        </div>
    </form>
</div>

<!-- 联系（Modal） -->
<div class="modal fade" id="idAddArticleTypeDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">×
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    添加新文章类型
                </h4>
            </div>
            <div class="modal-body" style="text-align: center">
                <form action="/blog/article" method="post" onsubmit="return false" class="form center-block text-center text-primary">
                    <div class="form-group">
                        <input type="text" class="form-control input-lg" name="articleType" id="idTextArticleType" placeholder="文章类型名称" required="true" title=""
                               data-container="false" data-toggle="popover" data-placement="right"
                               data-content="文章类型非法">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg" id="BtnArticleTypeAdd">确认添加</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">关闭
                </button>
                <!--<button type="button" class="btn btn-primary">-->
                <!--提交更改-->
                <!--</button>-->
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<% include footer.ejs %>
<script type="text/javascript">
    require(["/js/main.js"], function () {
        require(['/js/app/editblog.js']);
    });
</script>