<% include header.ejs %>
<!--https://github.com/summernote/summernote-->

<div class="span7" style="float: left;">
    <form role="form" onsubmit="return false;">
        <div class="form-group">
            <div class="input-group">
                <label class="col-sm-2 control-label" for="idArticleTypes">文章类别</label>
                <select class="selectpicker" id="idArticleTypes">
                    <% for(var i = 0, len = sidebar.length;i < len;i++){  if(sidebar[i].en == "News"){continue;}%>
                    <option><%= sidebar[i].ch %></option>
                    <% } %>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="name">文章名称</label>
            <input type="text" class="form-control col-lg-10" style="width:400px;" id="idArticleName"
                   placeholder="请输入名称">
        </div>
        <div class="form-group">
            <div id="summernote"></div>
        </div>

        <div class="form-group" style="text-align: right;margin-top: 5px;">
            <button type="submit" class="btn btn-info btn-small" id="idLockEdit">锁定</button>
            <button type="submit" class="btn btn-warning btn-small" id="idRetEdit">重置</button>
            <button type="submit" class="btn btn-primary btn-small" id="idArticleCommit">提交</button>
        </div>

    </form>

</div>

<% include footer.ejs %>
<script type="text/javascript">
    require(["/js/main.js"], function () {
        require(['/js/app/editblog.js']);
    });
</script>