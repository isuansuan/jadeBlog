<% include header.ejs %>

<% include sidebar.ejs %>

<div class="span7" style="float: left;">

    <div id="idCarousel" class="carousel slide">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            <li data-target="#idCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#idCarousel" data-slide-to="1"></li>
            <li data-target="#idCarousel" data-slide-to="2"></li>
            <li data-target="#idCarousel" data-slide-to="3"></li>
            <li data-target="#idCarousel" data-slide-to="4"></li>
            <li data-target="#idCarousel" data-slide-to="5"></li>
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="/images/slides/slide1.png" width=1250px height=800px alt="First slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide2.png" width=1250px height=800px alt="Second slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide3.png" width=1250px height=800px alt="Third slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide4.png" width=1250px height=800px alt="fourth slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide5.png" width=1250px height=800px alt="fifth slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide6.png" width=1250px height=800px alt="sixth slide">
            </div>
        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="carousel-control left" href="#idCarousel"
           data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#idCarousel"
           data-slide="next">&rsaquo;</a>
    </div>

    <div class="row-fluid">
        <% for(var i = 0, len = mainpage.childPage.length;i < len;++i){ %>
        <div class="span4">
            <h2><%= mainpage.childPage[i][lang] %></h2>

            <p></p>

            <p><a class="btn btn-danger" href="<%= mainpage.childPage[i].link %>" target="_blank">View
                    details &raquo;</a></p>
        </div>
        <!--/span-->
        <% } %>
    </div>

    <% if(userName){ %>
    <div class="row-fluid">
        <div class="span4">
            <h2>写博客</h2>

            <p>会员专享</p>

            <p><a class="btn btn-info" href="/blog/editblog">前往编辑博客 &raquo;</a></p>
        </div>

        <div class="span4">
            <h2>管理</h2>

            <p>管理员专享</p>

            <p><a class="btn btn-info" href="/manager/index">前往 &raquo;</a></p>
        </div>
    </div>


    <% } %>

    <!--/row-->
</div><!--/span-->

<div class="span3" style="border: 0 solid black;float: right;text-align: center;">
    <div class="col-sm-6 col-md-3">
        <a href="#" class="thumbnail">
            <img src="/images/zjw.png" alt="郑金玮"/>
            <h6>作者简介:Jader,郑金玮 编程爱好者</h6>
        </a>
    </div>

    <div class="well sidebar-nav">
        <% for(var i = 1;i <= advertcnt;i++) { var path = "/images/adverts/ad" + i + ".png"; %>
        <div class="col-sm-6 col-md-3" style="margin: 5px;">
            <a href="#" alt="#"><img src="<%= path %>"></a>
        </div>
        <% } %>
    </div>
</div>


<% include footer.ejs %>

<script type="text/javascript">
    require(["js/main.js"], function () {
        require(['js/app/index.js']);
    });
</script>
