            <h2><%= mainpage.childPage[i][lang] %></h2>

            <p></p>

            <p><a class="btn btn-danger" href="<%= mainpage.childPage[i].link %>" target="_blank">View details &raquo;</a></p>
        </div>
        <!--/span-->
        <% } %>
    </div>

    <% if(userName){ %>
    <div class="row-fluid">
        <div class="span4">
            <h2>写博客</h2>
            <p></p>
            <p><a class="btn btn-info" href="/user/editblog">前往编辑博客 &raquo;</a></p>
        </div>
    </div>
    <% } %>



    <!--/row-->
</div><!--/span-->

