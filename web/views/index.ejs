<% include header.ejs %>
<div class="span7" style="float: left;">

    <div id="idCarousel" class="carousel slide">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            <li data-target="#idCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#idCarousel" data-slide-to="1"></li>
            <li data-target="#idCarousel" data-slide-to="2"></li>
            <li data-target="#idCarousel" data-slide-to="3"></li>
            <li data-target="#idCarousel" data-slide-to="4"></li>
            <li data-target="#idCarousel" data-slide-to="5"></li>
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="/images/slides/slide1.png" width=1250px height=800px alt="First slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide2.png" width=1250px height=800px alt="Second slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide3.png" width=1250px height=800px alt="Third slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide4.png" width=1250px height=800px alt="fourth slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide5.png" width=1250px height=800px alt="fifth slide">
            </div>
            <div class="item">
                <img src="/images/slides/slide6.png" width=1250px height=800px alt="sixth slide">
            </div>
        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="carousel-control left" href="#idCarousel"
           data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#idCarousel"
           data-slide="next">&rsaquo;</a>
    </div>

    <!--<div class="hero-unit">-->
    <!--<h1></h1>-->
    <!--<p></p>-->
    <!--<p><a href="http://my.csdn.net/dai_jing" class="btn btn-primary btn-large">Learn more &raquo;</a></p>-->
