<% include header.ejs %>
<% include sidebar.ejs %>
<div class="col-md-8">

    <% if(info && info.length){ %>

    <% for(var i = 0, len = info.length;i < len;++i){ var doc = info[i];var clsIndex = i % 4;var panelClsList = ["panel-warning", "panel-success", "panel-info", "panel-primary"]; %>
    <div class="panel <%= panelClsList[clsIndex] %>">
        <div class="panel-heading">
            <a href="#"><span class="panel-title label label-info" style="font-size: 20px;color:blue"><%= doc.title %></span>
            <span style="font-family:'微软雅黑';font-size: 14px;color:darkblue"><h4 class="">
                    作者:<%= doc.author %></h4>发布时间:<%= doc.create_tm %></span><span style="margin-left:50px;color:blue;">更新时间:<%= doc.update_tm %></span>
            </a></div>
        <div class="panel-body">
            <%- doc.brief %>
        </div>
    </div>
    <% } %>

    <% }else{ %>

    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">文章</h3>
        </div>
        <div class="panel-body">
            还没有发布文章哦
        </div>
    </div>

    <% } %>
    </ul>
</div>
<% include footer.ejs %>
<script type="text/javascript">
    require(["/js/main.js"], function () {
        require(["/js/app/blog.js"]);
    });
</script>

